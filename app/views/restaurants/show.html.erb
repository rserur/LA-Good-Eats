<h2><%= @restaurant.name %></h2>
<%= @restaurant.address %>
<%= @restaurant.city %>
<%= @restaurant.state %>
<%= @restaurant.zip %>
<%= @restaurant.category.name %>

<ul>
<% @restaurant.reviews.each do |review| %>
  <li><strong><%= review.rating %>:</strong>
  <%= review.body %></li>
<% end %>
</ul>

<%= link_to "Add Review", new_restaurant_review_path(@restaurant) %>
