<h2><%= @restaurant.name %></h2>
<h3><%= @restaurant.address %><br/>
<%= @restaurant.city %>,
<%= @restaurant.state %>
<%= @restaurant.zip %></h3>
<%= "#{'Cuisine: '}" + @restaurant.category.name if @restaurant.category %>
<p><%= @restaurant.description %></p>

<% @restaurant.reviews.each do |review| %>
  <div class="review">
    <p class="rating" data-score="<%= review.rating %>"></p>
    <p><%= review.body %></p>
  </div>
  <% end %>

<%= link_to "Add Review", new_restaurant_review_path(@restaurant) %>

<script>
  $(document).ready(function() {

    $(".rating").html(function(){
      var num = $(this).data("score");

      for(i = 0; i < num; i++) {
        $(this).append("<i class='fa fa-star'></i>");
      }
    });

  });
</script>
